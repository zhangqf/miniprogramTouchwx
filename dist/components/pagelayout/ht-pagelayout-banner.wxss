.ui-content {
  width: 100%;
  margin: 0 auto;
  box-sizing: content-box;
  padding-bottom: 0;
  min-height: 100%;
  border-radius: 20rpx;
  overflow: hidden;
  color: #333;
}
.swiper {
  margin-bottom: 24rpx;
}
.swiper .swiper_item {
  display: flex;
  height: 100%;
  flex-direction: column;
  align-items: center;
  border-radius: 10rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  position: relative;
}
.swiper .swiper_item image {
  flex: 1;
  margin-right: 5px;
}
.swiper .swiper_item image:last-child {
  margin-right: 0;
}
.swiper .swiper_item .ht-bannerTitle {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  right: 0;
  margin: 0 auto;
  background: rgba(233, 233, 233, 0.6);
  text-align: center;
  height: 40rpx;
  line-height: 40rpx;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.text {
  margin-left: 20rpx;
}
